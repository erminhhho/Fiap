{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Test FormStateManager v2.0",
			"type": "shell",
			"command": "echo 'Testing FormStateManager v2.0 - Starting local server on port 5500...' && python -m http.server 5500 --directory .",
			"group": "test",
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Open Browser - FormStateManager v2.0",
			"type": "shell",
			"command": "echo 'Opening browser at http://localhost:5500...' && start http://localhost:5500",
			"group": "test",
			"isBackground": false,
			"dependsOn": "Test FormStateManager v2.0"
		},
		{
			"label": "Test FormStateManager v2.0 - Complete",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Test FormStateManager v2.0",
				"Open Browser - FormStateManager v2.0"
			],
			"group": "test"
		},
		{
			"label": "Stop Local Server",
			"type": "shell",
			"command": "echo 'Stopping local server...' && taskkill /F /IM python.exe",
			"group": "test",
			"isBackground": false
		}
	]
}
